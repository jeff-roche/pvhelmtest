apiVersion: v1
kind: Pod
metadata:
  name: {{ .Chart.Name }}
spec:
  containers:
    - name: {{ .Chart.Name }}
      image: "{{ .Values.image.repository }}:{{ .Values.image.tag }}"
      volumeMounts:
        - name: {{ .Chart.Name }}-volume
          mountPath: /usr/data
  volumes:
    - name: {{ .Chart.Name }}-volume
      persistentVolumeClaim:
        claimName: {{ .Chart.Name }}-pvc